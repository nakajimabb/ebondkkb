<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="card card-primary">
        <div class="card-body pb-0">
          <div class="form-group row">
            <%= form.label :name, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= form.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :code, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= form.text_field :code, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= form.check_box :hidden %>
            <label class="form-check-label" for="group_hidden"><small>非公開</small></label>
          </div>

          <%= react_component("TableForm", { title: 'メンバー', data: @group_users }) %>

        </div>
        <div class="card-footer">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
