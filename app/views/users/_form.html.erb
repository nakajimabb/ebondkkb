<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">基本情報</h3>
        </div>
        <div class="card-body px-1 py-2">
          <table class="table">
            <colgroup>
              <col width="30%">
              <col width="70%">
            </colgroup>
            <tbody>
              <tr>
                <th class="px-2 py-1"><%= form.label :code, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1"><%= form.text_field :code, class: 'form-control form-control-sm' %></td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :name, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <div class="row">
                    <div class="col-md-6">
                      <%= form.text_field :last_name, class: 'form-control form-control-sm' %>
                    </div>
                    <div class="col-md-6">
                      <%= form.text_field :first_name, class: 'form-control form-control-sm' %>
                    </div>
                  </div>
                </td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :email, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1"><%= form.text_field :email, class: 'form-control form-control-sm' %></td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :sex, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <%= form.select :sex, User.sexes_i18n.invert, {}, class: 'form-control form-control-sm' %>
                </td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :prefecture, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <%= form.select :prefecture, prefecture_options, {include_blank: true}, class: 'form-control form-control-sm' %>
                </td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :birthday, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <%= form.date_field :birthday, class: 'form-control form-control-sm' %>
                </td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :password, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <%= form.password_field :password, autocomplete: 'new-password', class: 'form-control form-control-sm' %>
                </td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :password_confirmation, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <%= form.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control form-control-sm' %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">基本情報2</h3>
        </div>
        <div class="card-body px-1 py-2">
          <table class="table">
            <colgroup>
              <col width="30%">
              <col width="70%">
            </colgroup>
            <tbody>
              <tr>
                <th class="px-2 py-1"><%= form.label :shift_number1, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1"><%= form.text_field :shift_number1, class: 'form-control form-control-sm' %></td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :shift_number2, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1"><%= form.text_field :shift_number2, class: 'form-control form-control-sm' %></td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :tel, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1"><%= form.text_field :tel, class: 'form-control form-control-sm' %></td>
              </tr>
              <tr>
                <th class="px-2 py-1"><%= form.label :parent_id, class: 'font-weight-normal text-sm' %></th>
                <td class="px-2 py-1">
                  <%= react_component("SelectUser", {isClearable: true,
                                                     name: 'user[parent_id]',
                                                     value: {label: user.parent&.name_with_code,
                                                             value: user.parent_id},
                                                     shop: false,
                                                     }) %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">基本情報3</h3>
        </div>
        <div class="card-body px-1 py-2">
          <table class="table">
            <colgroup>
              <col width="30%">
              <col width="70%">
            </colgroup>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">追加情報</h3>
        </div>
        <div class="card-body px-1 py-2">
          <table class="table">
            <colgroup>
              <col width="30%">
              <col width="70%">
            </colgroup>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
  <%= form.submit class: 'btn btn-primary my-2' %>
<% end %>
