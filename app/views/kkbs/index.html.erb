<style>
  .card-header,.card-body {
    padding: 0.5rem;
  }
</style>
<div class="row">
  <% @kkbs.each do |kkb| %>
    <div class="col-sm-4 col-md-3 col-xl-2">
      <%= link_to(kkb, class: 'text-secondary') do %>
        <div class="card card-outline card-primary" style="height: 200px; overflow: hidden;">
          <div class="card-header">
            <h3 class="card-title text-xs">
              <%= "#{sprintf("%d", kkb.id)} #{kkb.title}" %>
            </h3>
          </div>
          <div class="card-body text-xs">
            <%= simple_format(truncate(kkb.content, length: 80)) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%= paginate @kkbs if @kkbs.present? %>